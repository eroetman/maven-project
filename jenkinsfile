pipeline {

    agent any

    // def rtMaven = Artifactory.newMavenBuild()

    tools {
        maven 'localMaven'
    }

    stages{
        stage('Build'){
            steps {
                // rtMaven.run pom: 'pom.xml', goals: 'clean package'
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}