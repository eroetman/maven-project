pipeline {

    agent any

    stages{
        stage('Build'){
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        
        stage ('Deploy to Staging'){
            steps {
                build job: 'Deploy-to-staging'
            }
        }
        
        stage ('Deploy to PRD'){
            steps {
                timeout(time:5, unit:'DAYS'){
                    input message:'Approve PRD Deployment?'
                }
                build job: 'Deploy-to-final'
            }
            post {
                success {
                    echo 'Deployed!'
                }
            }
        }
    }
}